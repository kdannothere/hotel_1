<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hotels</title>
    <link rel="stylesheet" href="./css/output.css" />
  </head>
  <body>
    <div class="wrapper min-h-[100vh] flex flex-col">
      <!-- @import ../components/header.kit -->
      <div class="grid justify-center">
        <div class="text-center">
          <h1 class="text-3xl mt-10 mb-8 font-bold">Contact Us</h1>
        </div>
        <form action="./" class="w-96 grid grid-cols-1 items-center">
          <div class="name flex flex-col mb-6">
            <label for="name">Name</label>
            <input
              class="border-2 border-gray-300 px-4 py-1 rounded-sm"
              tabindex="1"
              required
              type="text"
              id="name"
              name="name"
              placeholder="Enter your name"
            />
          </div>
          <div class="phone flex flex-col mb-6">
            <label for="phone">Phone</label>
            <input
              class="border-2 border-gray-300 px-4 py-1 rounded-sm"
              tabindex="2"
              required
              type="text"
              id="phone"
              name="phone"
              placeholder="Enter your phone"
            />
          </div>
          <div class="email flex flex-col mb-6">
            <label for="email">Email</label>
            <input
              class="border-2 border-gray-300 px-4 py-1 rounded-sm"
              tabindex="3"
              required
              type="email"
              id="email"
              name="email"
              placeholder="Enter your email"
            />
          </div>
          <div class="message flex flex-col mb-6">
            <label for="message">Message</label>
            <textarea
              class="min-h-28 border-2 border-gray-300 px-4 py-1 rounded-sm"
              tabindex="4"
              type="text"
              rows="5"
              required
              id="message"
              name="message"
              placeholder="Enter your message"
            ></textarea>
          </div>
          <button
            class="w-fit justify-self-center bg-slate-300 px-8 py-2 rounded-sm"
            tabindex="4"
          >
            Send
          </button>
        </form>
      </div>
      <!-- @import ../components/footer.kit -->
    </div>
  </body>
</html>
